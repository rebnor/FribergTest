@model FribergTest.Models.Customer

@{
    ViewData["Title"] = "CreateCustomer";
}
<div class="back">
    <a asp-action="Index">&larr; Tillbaka</a>
</div>

<h1>Lägg till ny kund</h1>
<p>@ViewBag.AddedSuccess</p>
<hr />
<div>
    <div class="form">
        <form asp-action="CreateCustomer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="CustomerFirstName">Förnamn: </label>
                <input asp-for="CustomerFirstName" class="textbox" />
                <span asp-validation-for="CustomerFirstName"></span>
            </div>
            <div>
                <label asp-for="CustomerLastName">Efternamn: </label>
                <input asp-for="CustomerLastName" class="textbox" />
                <span asp-validation-for="CustomerLastName"></span>
            </div>
            <div>
                <label asp-for="CustomerEmail">E-mail: </label>
                <input asp-for="CustomerEmail" class="textbox" />
                <span asp-validation-for="CustomerEmail"></span>
            </div>
            <div>
                <label asp-for="CustomerPassword">Lösenord: </label>
                <input asp-for="CustomerPassword" class="textbox" />
                <span asp-validation-for="CustomerPassword"></span>
            </div>
            <div>
                <input type="submit" value="Create" class="input-button" />
            </div>
        </form>
    </div>
</div>